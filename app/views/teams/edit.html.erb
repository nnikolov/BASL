<h1>Editing team</h1>

<%= render 'form' %>

<% @team.photos.each do |photo| %>
<%= form_for(photo, :url => update_photo_path(photo.id), :method => 'post') do |f| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= image_tag "/images/#{photo.file_name}", {:class => 'team_image'} %>
  </div>
  <div class="field">
    <%= f.label "Photo caption" %><br />
    <%= f.text_area :caption, {:rows => 3, :cols => 100} %>
  </div>
  <div class="field">
    <%= f.label "Active" %><br />
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>

<%= link_to 'Show', season_team_path(@team.season, @team) %> |
<%= link_to 'Back', season_teams_path(@team.season) %>
