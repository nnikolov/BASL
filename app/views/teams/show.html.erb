<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @team.name %>
</p>

<p>
  <b>Color:</b>
  <%= @team.color %>
</p>

<p>
  <b>Season:</b>
  <%= @team.season.name %>
</p>

<p>
  <b>Pool:</b>
  <%= @pool_name %>
</p>

<p>
  <b>Active:</b>
  <%= @team.active %>
</p>

<% @team.photos.each do |photo| %>
<p>
  <b>Photo:</b>
  <br /><%= image_tag "/images/#{photo.file_name}", {:class => 'team_image'} %>
</p>

<p>
  <b>Photo caption:</b>
  <%= photo.caption %>
</p>
<p>
  <b>Link to this photo:</b>
  <%= image_path("/images/#{photo.file_name}") %>
</p>
<% end %>


<%= link_to 'Edit', edit_season_team_path(@team.season_id, @team) %> |
<%= link_to 'Back', season_teams_path(@team.season_id) %>
