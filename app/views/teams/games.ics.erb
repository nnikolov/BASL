BEGIN:VCALENDAR
PRODID:-//ba-soccer.ca//0.0.1//EN
VERSION:2.0
CALSCALE:GREGORIAN
METHOD:PUBLISH
X-WR-CALNAME:<%= @team.display %> games
X-WR-CALDESC:BA Soccer League games schedule for <%= @team.display %>
<% @team.games.each do |game| %>
BEGIN:VEVENT
CREATED:<%= game.created_at.strftime("%Y%m%dT%H%M%SZ") %>
DTEND:<%= (game.time.utc + 2.hours).strftime("%Y%m%dT%H%M%SZ") %>
TRANSP:OPAQUE
SUMMARY:<%= game.home_team.display %> vs. <%= game.away_team.display %> @ <%= game.field.name %>
DTSTART:<%= game.time.utc.strftime("%Y%m%dT%H%M%SZ") %>
DTSTAMP:<%= Time.now.strftime("%Y%m%dT%H%M%SZ") %>
LOCATION:<%= game.field.location %>
END:VEVENT
<% end %>
END:VCALENDAR
