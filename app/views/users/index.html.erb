<h1>Users</h1>

<table class="bordered">
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%=h user.admin %></td>
    <td><%=h user.active %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

