<!DOCTYPE html>
<html>
<head>
  <title>Basl</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="base">
<div id="content">
<%= image_tag "BA.JPG", :width => "150px", :id => "basoccer_logo" %>

<div id="topmenu">
<ul>
<li><%= link_to "News", :controller => :news_bytes %></li>
<% unless @season.id.blank? %>
<li><%= link_to "Games", season_games_path(:season_id => @season.id) %></li>
<li><%= link_to "Standings", season_standings_path(:season_id => @season.id) %></li>
<li><%= link_to "Teams", season_teams_path(:season_id => @season.id) %></li>
<% end %>
<li><%= link_to "Seasons", :controller => :seasons %></li>
<li><%= link_to "Fields", fields_path %></li>
<li><%= link_to "Administrivia", administrivia_path %></li>
<li><%= link_to "Admin", admin_path %></li>
</ul>
</div>

<br />
<div id="main">

<%= yield %>

</div>
</div>
</div>

</body>
</html>
