  <td><%=h display_game.id %></td>
  <td><%=h display_game.time.to_s(:short) %></td>
  <td><%=h display_game.field.name %></td>
  <td>
    <% if display_game.home_team.respond_to?('name') %>
      <%=h display_game.home_team.name %> (<%=h display_game.home_team.color %>)
    <% end %>
  </td>
  <td><%=h display_game.home_team_score %></td>
  <td>
    <% if display_game.home_team.respond_to?('name') %>
      <%=h display_game.away_team.name %> (<%=h display_game.away_team.color %>)
    <% end %>
  </td>
  <td><%=h display_game.away_team_score %></td>
  <td><%=h display_game.game_type.name %></td>
  <% if @logged_in %>
  <td><%= link_to "Edit", edit_season_game_path(display_game.season, display_game), :remote => true %></td>
  <td><%= link_to 'Destroy', [display_game.season, display_game], :confirm => 'Are you sure?', :method => :delete %></td>
  <% end %>
