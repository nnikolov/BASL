<table class="bordered">
  <tr>
    <th>ID</th>
    <th>Game time</th>
    <th>Field</th>
    <th>Home team</th>
    <th>Score</th>
    <th>Away team</th>
    <th>Type</th>
    <% if @logged_in %>
    <th></th>
    <th></th>
    <% end %>
  </tr>
  <% last_game_date = nil %>
  <% tr_class = "odd_line" %>
  <% @games.each do |game| %>
    <% tr_class = cycle("even_line","odd_line") unless last_game_date == nil or game.time.to_date.to_s == last_game_date.to_date.to_s %>
    <tr class="<%= tr_class %>" id="game_<%= game.id %>">
      <%= render :partial => "display_game", :object => game %>
    </tr>
    <% last_game_date = game.time %>
  <% end %>
</table>
