<%= form_for(@game, :url => season_game_path(@game.season, @game)) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :season_id %><br />
    <%= f.select("season_id", Season.all.collect {|s| [s.name, s.id]}, {:include_blank => false}) %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
  <div class="field">
    <%= f.label :field_id %><br />
    <%= f.select("field_id", Field.all.collect {|f| [f.name, f.id]}, {:include_blank => false}) %>
  </div>
  <div class="field">
    <%= f.label :home_team_id %><br />
    <%= f.select("home_team_id", Season.find(params[:season_id]).teams.collect {|t| ["#{t.name} (#{t.color})", t.id]}, {:include_blank => false}) %>
  </div>
  <div class="field">
    <%= f.label :home_team_score %><br />
    <%= f.text_field :home_team_score %>
  </div>
  <div class="field">
    <%= f.label :away_team_id %><br />
    <%= f.select("away_team_id", Season.find(params[:season_id]).teams.collect {|t| ["#{t.name} (#{t.color})", t.id]}, {:include_blank => false}) %>
  </div>
  <div class="field">
    <%= f.label :away_team_score %><br />
    <%= f.text_field :away_team_score %>
  </div>
  <div class="field">
    <%= f.label :game_type_id %><br />
    <%= f.select("game_type_id", GameType.all.collect {|g| [g.name, g.id]}, {:include_blank => false}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
