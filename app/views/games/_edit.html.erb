<td><%= @game.id %></td>
<td colspan="9">
<%= form_for(@game, :url => season_games_path(@game.season, @game), :html => {:autocomplete => 'off'}) do |f| %>

  <table class="bordered">
  <tr>
    <td><%= f.label :time %></td>
    <td><%= f.datetime_select :time %></td>
  </tr>
  <tr>
    <td><%= f.label :field_id %></td>
    <td><%= f.select ("field_id", Field.find(:all, :order => 'name').collect {|fd| [fd.name, fd.id]}, {:include_blank => false}) %></td>
  </tr>
  <tr>
    <td><%= f.label :home_team_id %></td>
    <td><%= f.select ("home_team_id", Team.find(:all, :conditions => ["season_id = ?", @game.season_id],
          :order => 'name').collect {|t| ["#{t.name} (#{t.color})", t.id]}, {:include_blank => true}) %></td>
  </tr>
  <tr>
    <td><%= f.label :home_team_score %></td>
    <td><%= f.text_field :home_team_score, :auto_complete => false %></td>
  </tr>
  <tr>
    <td><%= f.label :away_team_id %></td>
    <td><%= f.select ("away_team_id", Team.find(:all, :conditions => ["season_id = ?", @game.season_id],
          :order => 'name').collect {|t| ["#{t.name} (#{t.color})", t.id]}, {:include_blank => true}) %></td>
  </tr>
  <tr>
    <td><%= f.label :away_team_score %></td>
    <td><%= f.text_field :away_team_score %></td>
  </tr>
  <tr>
    <td><%= f.label :game_type_id %></td>
    <td><%= f.select ("game_type_id", GameType.find(:all).collect {|g| [g.name, g.id]}, {:include_blank => false}) %></td>
  </tr>
  <tr>
    <td align="right"><%= f.submit "Update" %></td><td><%= link_to "Cancel", cancel_edit_path(@game.id), :remote => true %></td>
  </tr>
<% end %>

</td>
