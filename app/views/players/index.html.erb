<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Manager</th>
    <th>Active</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.team_id %></td>
    <td><%= player.manager %></td>
    <td><%= player.active %></td>
    <td><%= player.note %></td>
    <td><%= link_to 'Show', players_path(player.team_id, player) %></td>
    <td><%= link_to 'Edit', edit_players_path(player.team_id, player) %></td>
    <td><%= link_to 'Destroy', team_player_path(player.team_id, player), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

