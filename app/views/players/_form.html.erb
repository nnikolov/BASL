<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if ["new", "create"].include? params[:action] %>
  <div class="field">
    <%= f.label "Names separated by a new line" %><br />
    <%= f.text_area :names %>
  </div>
  <% else %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :team_id %><br />
    <%= f.select("team_id", Team.where(:season_id => @player.team.season_id).collect {|t| ["#{t.name} (#{t.color})", t.id]}, {:include_blank => false}) %>
  </div>
  <% unless ["new", "create"].include? params[:action] %>
  <div class="field">
    <%= f.label :manager %><br />
    <%= f.check_box :manager %>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number, :size => 2 %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
